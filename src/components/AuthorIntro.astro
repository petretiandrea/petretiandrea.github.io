---
import { getLangFromUrl, useTranslations } from '../i18n/locales';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="mb-6">
  <h2 class="mt-6 text-4xl text-gray-700 font-bold capitalize dark:text-blue-200">
    {t('welcome')}
  </h2>
  <p class="mt-8 mb-4 dark:text-white text-justify whitespace-pre-line">
    {t('about_me')}
  </p>
</div>
