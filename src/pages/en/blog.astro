---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Blog | Andrea Petreti" description="Blog posts about software engineering and technology">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-12 text-gray-900 dark:text-white">Blog</h1>

    <div class="grid gap-8 md:grid-cols-2">
      {sortedPosts.map((post) => {
        const slug = post.data.slug || post.id.replace('blog/', '').replace('/index.md', '');
        const readingTime = Math.ceil(post.body.split(' ').length / 200);

        return (
          <article class="group">
            <a href={`/blog/${slug}`} class="block">
              {/* Thumbnail */}
              {post.data.image ? (
                <div class="relative overflow-hidden rounded-lg mb-4 aspect-video bg-gray-200 dark:bg-gray-800">
                  <Image
                    src={post.data.image}
                    alt={post.data.title}
                    width={600}
                    height={338}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </div>
              ) : (
                <div class="relative overflow-hidden rounded-lg mb-4 aspect-video bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
                  <div class="text-white text-4xl font-bold opacity-20">
                    {post.data.title.substring(0, 1)}
                  </div>
                </div>
              )}

              {/* Content */}
              <div>
                <div class="flex items-center gap-2 text-xs text-gray-500 dark:text-gray-400 mb-2">
                  <time>{post.data.date.toLocaleDateString('en', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
                  <span>¬∑</span>
                  <span>{readingTime} min read</span>
                </div>

                <h2 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-indigo-600 transition-colors mb-2 line-clamp-2">
                  {post.data.title}
                </h2>

                <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3 text-sm">
                  {post.data.description}
                </p>

                <div class="flex flex-wrap gap-2">
                  {post.data.tags.slice(0, 3).map((tag: string) => (
                    <span class="text-xs bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 px-2 py-1 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </a>
          </article>
        );
      })}
    </div>

    <div class="mt-12 p-6 bg-blue-50 dark:bg-blue-950/30 border border-blue-200 dark:border-blue-800 rounded-lg">
      <p class="text-blue-800 dark:text-blue-200">
        üìù <strong>Note:</strong> Blog posts are currently available only in Italian.
        <a href="/blog" class="underline hover:text-blue-600">View Italian version</a>
      </p>
    </div>
  </div>
</Layout>
