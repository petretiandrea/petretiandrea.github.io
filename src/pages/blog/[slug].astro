---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import GiscusComments from '../../components/GiscusComments';
import TableOfContents from '../../components/TableOfContents.astro';
import { siteInfo } from '../../config/siteInfo';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map(post => {
    const slug = post.data.slug || post.id.replace('blog/', '').replace('/index.md', '');
    return {
      params: { slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content, headings } = await post.render();

function formatDate(date: Date) {
  return date.toLocaleDateString('en', { year: 'numeric', month: 'long', day: 'numeric' });
}

const readingTime = Math.ceil(post.body.split(' ').length / 200);
---

<Layout title={post.data.title} description={post.data.description} image={post.data.image}>
  <!-- Medium-style layout -->
  <div class="min-h-screen bg-white dark:bg-gray-900">
    <!-- Hero section -->
    <article class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="max-w-3xl mx-auto">
        <!-- Title -->
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-6 leading-tight">
          {post.data.title}
        </h1>

        <!-- Subtitle/Description -->
        {post.data.description && (
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
            {post.data.description}
          </p>
        )}

        <!-- Author info -->
        <div class="flex items-center justify-between mb-8 pb-8 border-b border-gray-200 dark:border-gray-700">
          <div class="flex items-center space-x-4">
            <Image
              src={siteInfo.author_image}
              alt={siteInfo.author}
              width={48}
              height={48}
              class="w-12 h-12 rounded-full object-cover"
              loading="eager"
            />
            <div>
              <div class="font-medium text-gray-900 dark:text-gray-100">
                {siteInfo.author}
              </div>
              <div class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400">
                <time>{formatDate(post.data.date)}</time>
                <span>Â·</span>
                <span>{readingTime} min read</span>
              </div>
            </div>
          </div>

          <!-- Tags -->
          <div class="hidden sm:flex flex-wrap gap-2">
            {post.data.tags.slice(0, 3).map((tag: string) => (
              <span class="text-xs bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 px-3 py-1 rounded-full">
                {tag}
              </span>
            ))}
          </div>
        </div>

        <!-- Featured Image - Widescreen (optional) -->
        {post.data.image ? (
          <div class="w-full aspect-[21/9] rounded-lg mb-12 shadow-2xl overflow-hidden bg-gradient-to-br from-indigo-500 to-purple-600">
            <Image
              class="w-full h-full object-cover"
              src={post.data.image}
              alt={post.data.title}
              width={1400}
              height={600}
              loading="eager"
            />
          </div>
        ) : (
          <div class="w-full h-2 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 rounded-full mb-12"></div>
        )}
      </div>

      <!-- Content with TOC -->
      <div class="max-w-7xl mx-auto">
        <div class="lg:grid lg:grid-cols-12 lg:gap-8">
          <!-- Main content -->
          <div class="lg:col-span-8">
            <div class="prose prose-lg dark:prose-invert prose-indigo max-w-none
                        prose-headings:font-bold prose-headings:text-gray-900 dark:prose-headings:text-gray-100
                        prose-p:text-gray-700 dark:prose-p:text-gray-300
                        prose-a:text-indigo-600 dark:prose-a:text-indigo-400
                        prose-strong:text-gray-900 dark:prose-strong:text-gray-100
                        prose-code:text-indigo-600 dark:prose-code:text-indigo-400
                        prose-pre:bg-gray-900 dark:prose-pre:bg-gray-950
                        prose-img:rounded-lg">
              <Content />
            </div>

            <!-- Comments Section -->
            <div class="mt-16 pt-16 border-t border-gray-200 dark:border-gray-700">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-8">Comments</h2>
              <GiscusComments
                client:only="react"
                repo="petretiandrea/petretiandrea.github.io"
                repoId="MDEwOlJlcG9zaXRvcnkyODQyMjkyOTc="
                category="Q&A"
                categoryId="DIC_kwDOEPD-sc4ClIwk"
                term={post.data.slug || post.id}
              />
            </div>
          </div>

          <!-- TOC Sidebar -->
          <aside class="hidden lg:block lg:col-span-4">
            <TableOfContents headings={headings} />
          </aside>
        </div>
      </div>
    </article>
  </div>
</Layout>
